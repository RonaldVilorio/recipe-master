
<%= form_for recipe do |f| %>
   <%=f.label :name, "Name your recipe"%>
   <br>
   <%=f.text_field :name%>
   <br>
   <br>

     <%=f.fields_for :ingredients do |ing|%>
        <%= ing.label :name, "Enter ingredient name"%>
        <%= ing.text_field :name%>
     <%end%>
     
    <br>
    <br>

    <%=f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name%>
    
    <br>
    <br>

    <%=f.label :content, "Tell us the steps to follow"%>
    <br>
    <%=f.text_area :content%>
    <br>
    <%=f.submit%>

<%end%>

