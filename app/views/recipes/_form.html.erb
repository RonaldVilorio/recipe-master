
# select box, and option to add an ingredient

# input field for name of recipe
# input box for recipe content(steps)
<%= form_for recipe do |f| %>
   <%=f.label :name%>
   <%=f.text_field :name%>
   <br>
   <br>
        <%=f.fields_for :ingredients do |ing|%>
            <%= ing.label :name, "Pick your ingredients or make your own"%>
            <br>
            <br>
            <%= ing.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
        <%end%>
    <br>
    <br>
    <%=f.label :content%>
    <br>
    <%=f.text_area :content%>
    <br>
    <%=f.submit%>

<%end%>