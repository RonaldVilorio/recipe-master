
<%= form_for user do |f| %>
    <%= render partial: "layouts/errors", locals: { object: @user } %>
        <%=f.label :name%>
        <%=f.text_field :name%>
        <br>
        <%=f.label :password%>
        <%=f.password_field :password%>
        <br>
        <%=f.label :password_confirmation%>
        <%=f.password_field :password_confirmation%>
        <br>
        <%=f.label :email%>
        <%=f.email_field :email%>
        <br>

        <%=f.submit%>

<%end%>